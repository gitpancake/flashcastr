# =============================================================================
# Flashcastr Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# =============================================================================
# FARCASTER / NEYNAR CONFIGURATION (Required)
# =============================================================================

# Get your API key from: https://neynar.com
NEYNAR_API_KEY=your_neynar_api_key_here

# Get your Client ID from Neynar dashboard
NEYNAR_CLIENT_ID=your_neynar_client_id_here

# =============================================================================
# NEXTAUTH CONFIGURATION (Required)
# =============================================================================

# Production URL of your deployed app (e.g., https://your-app.vercel.app)
NEXTAUTH_URL=http://localhost:3000

# Random string for JWT signing (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here

# =============================================================================
# APP CONFIGURATION (Required)
# =============================================================================

# Public URL where your app is deployed
NEXT_PUBLIC_URL=http://localhost:3000

# Frame display configuration
NEXT_PUBLIC_FRAME_NAME=Flashcastr
NEXT_PUBLIC_FRAME_DESCRIPTION=Broadcast your Space Invader flashes.
NEXT_PUBLIC_FRAME_BUTTON_TEXT=Enter

# =============================================================================
# FLASHCASTR API CONFIGURATION (Required)
# =============================================================================

# URL of the Flashcastr API server
NEXT_PUBLIC_FLASHCASTR_API_URL=http://localhost:4000

# API key for authenticating with Flashcastr backend
FLASHCASTR_API_KEY=your_flashcastr_api_key_here

# =============================================================================
# IMAGE STORAGE CONFIGURATION (Required)
# =============================================================================

# IPFS gateway for decentralized image storage via Pinata
NEXT_PUBLIC_IPFS_GATEWAY=https://fuchsia-rich-lungfish-648.mypinata.cloud/ipfs/

# =============================================================================
# DATABASE CONFIGURATION (Optional - for production)
# =============================================================================

# Redis connection string for caching (production only)
REDIS_URL=redis://localhost:6379

# KV store configuration for Vercel (optional)
KV_REST_API_URL=your_kv_api_url
KV_REST_API_TOKEN=your_kv_api_token

# =============================================================================
# FARCASTER FRAME METADATA (Development only)
# =============================================================================

# Seed phrase for generating frame metadata (development/scripts only)
# NEVER commit this to version control
SEED_PHRASE=your_twelve_word_seed_phrase_here

# Farcaster ID associated with the seed phrase
FID=your_farcaster_id

# Pre-generated frame metadata (auto-generated by scripts)
FRAME_METADATA={"frame":{"version":"1","name":"Flashcastr"}}

# =============================================================================
# ADMIN CONFIGURATION (Optional)
# =============================================================================

# Farcaster ID with admin privileges (for experimental features like map)
NEXT_PUBLIC_ADMIN_FID=your_admin_fid

# =============================================================================
# DEVELOPMENT CONFIGURATION (Development only)
# =============================================================================

# Enable localtunnel for development (true/false)
USE_TUNNEL=false